{{ define "signatureModal" }}
    <div id="signature-modal" class="modal-overlay hidden">
        <div class="modal">
            <h2>Customer Signature</h2>
            <p>Please sign below to confirm this invoice.</p>

            <canvas id="signature-canvas"></canvas>

            <div class="modal-actions">
                <button id="clear-signature" class="btn-secondary">
                    Clear
                </button>
                <button id="cancel-signature" class="btn-muted">Cancel</button>
                <button id="confirm-signature" class="btn-primary">
                    Confirm Signature
                </button>
            </div>
        </div>
    </div>
{{ end }}
