{{ define "nav" }}
    <div class="sidebar">
        <a href="/" class="sidebar-item">Home</a>

        {{ if .IsAuthenticated }}
            <a href="/estimate/list" class="sidebar-item">Estimates</a>
            <a href="/estimate/create" class="sidebar-item">New Estimate</a>

            <form method="POST" action="/user/logout">
                <input
                    type="hidden"
                    name="csrf_token"
                    value="{{ .CSRFToken }}"
                />
                <button type="submit" class="sidebar-item">Log out</button>
            </form>
        {{ else }}
            <a href="/user/login" class="sidebar-item">Log in</a>
        {{ end }}
    </div>
{{ end }}
