{{define "script-tags"}}
<script src="/static/js/estimates/main.js"></script>
{{ end }}


{{ define "header-tags"}}
<link rel="stylesheet" href="/static/css/estimates/create-estimate.css">
<link rel="stylesheet" href="/static/css/main.css">
{{ end }}

{{ define "content"}}
<form action="/estimate/create" method="POST" class="estimate-form">
  <h1>Create A New Estimate</h1>
  <div class="main-section">
    <div class="customer-info">
      <h3>Customer Info</h3> <br>
      <label for="customerName">Customer Name:</label>
      <input type="text" name="customerName" id="customerName">

      <label for="street">Street Address:</label>
      <input type="text" name="street" id="street">

      <label for="city">City:</label>
      <input type="text" name="city" id="city">

      <label for="state">State:</label>
      <input type="text" name="state" id="state">

      <label for="zip">Zip:</label>
      <input type="text" name="zip" id="zip">

      <label for="email">Email:</label>
      <input type="email" name="email" id="email">

      <label for="phone">Phone:</label>
      <input type="tel" name="phone" id="phone">
    </div>

    <div class="kitchen-details">
      <h3>Kitchen Details</h3> <br>
      <label for="kitchenLength">Length (in)</label>
      <input type="number" id="kitchenLength" name="kitchenLength" step="0.01" min="0">

      <label for="kitchenWidth">Width (in)</label>
      <input type="number" id="kitchenWidth" name="kitchenWidth" step="0.01" min="0">

      <label for="kitchenHeight">Height (in)</label>
      <input type="number" id="kitchenHeight" name="kitchenHeight" step="0.01" min="0">

      <label for="doorwayWidth">Door Width (in)</label>
      <input type="number" id="doorwayWidth" name="doorwayWidth" step="0.01" min="0">

      <label for="doorwayHeight">Door Height (in)</label>
      <input type="number" id="doorwayHeight" name="doorwayHeight" step="0.01" min="0">

    </div>

  </div>

  <div class="form-control">
    <input type="submit" value="Begin Estimate" class="submitButton">
  </div>

</form>
{{ end }}