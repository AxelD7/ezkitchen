{{ define "header-tags"}}

<link rel="stylesheet" href="/static/css/estimates/create-estimate.css">
<link rel="stylesheet" href="/static/css/main.css">

{{ end }}

{{ define "content"}}
<h1>Create a New Estimate</h3>
    <div class="main-section">
        <form action="/estimate/create" method="POST">
            <div class="customer-info">
                <h3>Customer Info</h3>

                <label for="customerName">Customer Name:</label>
                <input type="text" name="customerName" id="customerName"> <br>

                <label for="street">Street Address:</label>
                <input type="text" name="street" id="street">

                <label for="city">City:</label>
                <input type="text" name="city" id="city">

                <label for="state">State:</label>
                <input type="text" name="state" id="state">

                <label for="zip">Zip:</label>
                <input type="text" name="zip" id="zip"> <br>

                <label for="email">Email:</label>
                <input type="email" name="email" id="email">

                <label for="phone">Phone:</label>
                <input type="tel" name="phone" id="phone">
            </div>

            <div class="measurements-create-form">
                <h3>
                    Kitchen Details
                </h3>
                <label for="kitchenDimensions">Kitchen Dimensions</label>
                <br>
                <label for="kitchenLength">Length (FT)</label>
                <input type="number" step="0.01" min="0" name="kitchenLength" id="kitchenLength">
                <label for="kitchenWidth">Width (FT)</label>
                <input type="number" step="0.01" min="0" name="kitchenWidth" id="kitchenWidth">
                <label for="kitchenHeight">Height (FT)</label>
                <input type="number" step="0.01" min="0" name="kitchenHeight" id="kitchenHeight">
                <br>
                <br>
                <br>
                <label for="doorwayMesurement">Doorway Measurements</label>
                <br>
                <label for="doorwayWidth">Doorway Width (Inches):</label>
                <input type="number" step="0.01" min="0" name="doorwayWidth" id="doorwayWidth">
                <label for="doorwayWidth">Doorway Height (Inches):</label>
                <input type="number" step="0.01" min="0" name="doorwayHeight" id="doorwayHeight">
                <br><br>
                <input type="checkbox" name="newAppliances" id="newAppliances"> <label>Will they need new
                    appliances?</label>
                <br>
                <input type="checkbox" name="newCabinets" id="newCabinets"> <label>Will they need new
                    cabinets?</label><br>
                <input type="checkbox" name="newCountertops" id="newCountertops"> <label>Will they need new counter
                    tops?</label><br>
                <input type="checkbox" name="newFlooring" id="newFlooring"> <label>Will they need new flooring?</label>
                <label for="flooringType">What type of flooring will they be using? </label>
                <select name="flooringType" id="flooringType">
                    <option hidden disabled selected value> -- select an option -- </option>
                    <option value="Ceramic Tile">Ceramic Tile</option>
                    <option value="Stone Tile">Stone Tile</option>
                    <option value="Vinyl Flooring">Vinyl Flooring</option>
                    <option value="Hardwood Flooring">Hardwood Flooring</option>
                    <option value="No Preference">No Preferences</option>
                </select>
                <br>
                <input type="checkbox" name="newSink" id="newSink"> <label>Will they need a new sink?</label><br>

            </div>
            <input type="submit" value="Begin Estimate"></input>

        </form>
    </div>
    {{ end }}