                        {{ end }}
                    {{ end }}
                </div>
            {{ end }}

            {{ $found = false }}
            {{ range .Products }}
                {{ if eq .Product.Category "Misc" }}
                    {{ $found = true }}
                {{ end }}
            {{ end }}
            {{ if $found }}
                <div class="accordion-section">
                    <h2>Misc</h2>
                    {{ range .Products }}
                        {{ if eq .Product.Category "Misc" }}
